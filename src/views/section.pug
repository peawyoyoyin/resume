mixin section(title)
  section
    .section-title= title
    if block
      block

mixin section-item(item)
  .section-item
    if item.title
      .section-item-title
        .section-item-title-text= item.title
        if item.date
          .section-item-date= item.date
    .section-item-title
      if item.subtitle
        .section-item-subtitle= item.subtitle
        if !item.title && item.date
          .section-item-date= item.date
    if item.details
      .pl-10.mt-1
        ul.list-disc
          each detail in item.details
            li.w-full= detail

mixin section-item-compact(item)
  .section-item-compact
    .section-item-title
      .section-item-title-text= item.title
      if item.date
        .section-item-date= item.date